<p id="notice"><%= notice %></p>

<h1>Tâches</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Contenu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Voir', task %></td>
        <td><%= link_to 'Editer', edit_task_path(task) %></td>
        <td><%= link_to 'Supprimer', task, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle tâche', new_task_path %>
