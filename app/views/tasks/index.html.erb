<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><strong><%= task.title %></<strong></td>
        <td><em><%= task.content %></em></td>
        <td><%= link_to 'Voir', task %></td>
        <td><%= link_to 'Editer', edit_task_path(task) %></td>
        <td><%= link_to 'Supprimer', task, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New task', new_task_path %>
